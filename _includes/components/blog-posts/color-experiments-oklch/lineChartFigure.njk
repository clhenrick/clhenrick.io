{% macro lineChartFigure(chart, title, caption) %}
<figure class="plot-container" aria-labelledby="plot-title-{{ title | slugify }}">
  <p class="plot-title" id="plot-title-{{ title | slugify }}">{{ title }}</p>
  {%- include chart -%}
  <figcaption>
    {{ caption }}
  </figcaption>
</figure>
{% endmacro %}
