<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">

    {# Let's others know this site was created using 11ty #}
    <meta name="generator" content="{{ eleventy.generator }}">

    {# RSS feeds #}
    <link rel="alternate" href="/feed.xml" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="/feed.json" type="application/feed+json" title="{{ metadata.title }}">

    {# NOTE: All common CSS used throughout the site are added here #}
    {%- set partials %}
      base/reset,
      base/base,
      base/utils,
      components/button,
      layouts/primary-navigation,
      layouts/footer
    {% endset %}
    {% include "styles.njk" %}
  </head>

  {# NOTE: data-page-size is used to set the max-width of content in <main> and <footer> #}
  {%- set defaultPageSize = 'normal' %}
  <body data-page-size="{{pageSize or defaultPageSize}}">
    <script>
      document.body.classList.add("js-enabled");
    </script>

    {%- include "header.njk" %}

    <main id="main" tabindex="-1">
      {{ content | safe }}
    </main>

    {%- include "footer.njk" %}

    {# NOTE: JavaScript shared by all pages are added here #}
    {%- set javascripts -%}
      primary-navigation
    {%- endset -%}
    {%- include "scripts.njk" -%}
  </body>
</html>
