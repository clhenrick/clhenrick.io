{
  "[markdown]": {
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100,
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    },
    "cSpell.fixSpellingWithRenameProvider": true,
    "cSpell.advanced.feature.useReferenceProviderWithRename": true,
    "cSpell.advanced.feature.useReferenceProviderRemove": "/^#+\\s/"
  },
  "[nunjucks]": {
    "editor.wordWrapColumn": 100,
    "editor.wordWrap": "bounded",
    "editor.formatOnSave": false
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",
  "emmet.includeLanguages": {
    "liquid": "html",
    "liquid-css": "css",
    "liquid-scss": "scss",
    "nunjucks": "html"
  },
  "search.exclude": {
    "**/.git": true,
    "**/_site": true,
    "**/node_modules": true,
    "**/*.code-search": true
  },
  "todohighlight.keywords": [
    {
      "backgroundColor": "#1db26b",
      "color": "#fff",
      "text": "DONE:"
    },
    {
      "backgroundColor": "#209be0",
      "color": "#fff",
      "text": "NOTE:"
    },
    {
      "color": "#000",
      "isWholeLine": false,
      "text": "HACK:"
    },
    {
      "backgroundColor": "#f70",
      "color": "#fff",
      "text": "????:"
    },
    {
      "backgroundColor": "#000",
      "color": "#d00",
      "text": "HARD-CODED:"
    },
    {
      "backgroundColor": "#d00",
      "color": "#fff",
      "text": "IMPORTANT:"
    }
  ],
  "workbench.editor.customLabels.patterns": {
    "**/_data/**/*": "${filename} - Global Data",
    "**/_includes/**/*.njk": "${filename} — Partials",
    "**/_includes/components/**/*.njk": "${filename} — Components",
    "**/_includes/layouts/**/*.njk": "${filename} — Layouts",
    "**/_site/**/*": "${filename} - ${dirname} (${extname}) — !COMPILED!",
    "**/assets/css/**/*": "${filename} - ${dirname} — Assets/CSS",
    "**/assets/js/**/*": "${filename} — Assets/JS",
    "**/content/**/*": "${filename} - ${dirname} (${extname}) — Content",
    "**/docs/**/*": "${filename} — Docs",
    "**/public/**/*": "${filename} — Public",
    "**/scripts/**/*": "${filename} — Scripts"
  },
  "cSpell.allowCompoundWords": true
}
