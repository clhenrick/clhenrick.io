{% from "./colorSwatch.njk" import colorSwatch %}

{%- macro colorSwatchFigure(swatches = [], caption = "") %}
<figure class="swatch-container">
  <div>
    {%- for swatch in swatches %}
    {{ colorSwatch(swatch.fill, swatch.textFill, swatch.showText, swatch.width, swatch.height) }}
    {%- endfor %}
  </div>
  {% if (caption) %}
  <figcaption>{{ caption }}</figcaption>
  {% endif %}
</figure>
{%- endmacro %}
