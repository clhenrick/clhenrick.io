---
pagination:
  data: work
  size: 1
  alias: project
permalink: "work/{{ project.title | slugify }}/"
layout: layouts/work.njk
---

<h1>{{project.title}}</h1>

{% if project.link %}
<p>
  <strong>Project link:</strong> <a href={{project.link}} target="_blank">{{project.title}}</a>
</p>
{% endif %}

{% if project.tech %}
<section>
  <h2>Technologies Used</h2>
  <ul class="tech-tags">
    {% for tag in project.tech %}
    <li>{{tag}}</li>
    {% endfor %}
  </ul>
</section>
{% endif %}

{% if project.description_long %}
<section>
  <h2>Project Details</h2>
  {{ project.description_long | markdown | safe }}
</section>
{% endif %}

{% if project.imgs %}
<section>
  <h2>Project Screenshots</h2>
  <ul class="screenshots">
    {% for img in project.imgs %}
    <li>
      <a href="#">
        <img loading="lazy" src="/img/{{img}}" alt="Screen shot of project: {{project.title}}">
      </a>
    </li>
    {% endfor %}
  </ul>
</section>
{% endif %}

<nav class="secondary" aria-label="secondary">
  <a href="/work/">
    <span aria-hidden="true" class="back-arrow">&#8619;</span> Go back to the Portfolio
  </a>
</nav>
