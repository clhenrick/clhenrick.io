---
pagination:
  data: work
  size: 1
  alias: project
permalink: "work/{{ project.title | slugify }}/"
layout: layouts/work.njk
---

<h1>{{project.title}}</h1>

<dl>
{% if project.date %}
  <div>
    <dt>Date:</dt>
    <dd>{{project.date}}</dd>
  </div>
  {% endif %}

  {% if project.link %}
  <div>
    <dt>Project link:</dt>
    <dd>
      <a href={{project.link}} target="_blank">{{project.title}}</a>
    </dd>
  </div>
  {% endif %}

  {%if project.code %}
  <div>
    <dt>Code:</dt>
    <dd>
      <a href={{project.code}} target="_blank">{{project.code}}</a>
    </dd>
  </div>
{% endif %}
</dl>

{% if project.tech %}
<section>
  <h2>Technologies Used</h2>
  <ul class="tech-tags">
    {% for tag in project.tech %}
    <li>{{tag}}</li>
    {% endfor %}
  </ul>
</section>
{% endif %}

{% if project.description_long %}
<section>
  <h2>Project Details</h2>
  {{ project.description_long | markdown | safe }}
</section>
{% endif %}

{% if project.imgs %}
<section>
  <h2>Project Screenshots</h2>
  <ul class="screenshots">
    {% for img in project.imgs %}
    <li>
      <a href="#">
        <img
          loading="lazy"
          decoding="async"
          src="/img/{{img}}"
          alt="Screenshot {{loop.index}} of {{project.title}}"
        >
      </a>
    </li>
    {% endfor %}
  </ul>
</section>
{% endif %}

<nav class="secondary" aria-label="secondary">
  <a href="/work/">
    <span aria-hidden="true" class="back-arrow">&#8619;</span> Go back to the Portfolio
  </a>
  <a href="#main" aria-label="Go back to top of page">
    <span aria-hidden="true">&#8679;</span>
  </a>
</nav>
