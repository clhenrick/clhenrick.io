{# NOTE: used by search.js and <form> below #}
{%- set websiteName = metadata.url | replace("https://", "") %}

<script>
  window.websiteName = "{{ websiteName }}";
</script>

{%- set partials %}
  components/button,
  pages/search
{%- endset %}
{%- set bucket="search" %}
{% include "styles.njk" %}

{%- set javascripts -%}
  search
{%- endset -%}
{%- set bucket = "search" %}
{%- include "scripts.njk" %}

<h1>
  {{title}}
</h1>

<p>Search the contents of this site using <a href="https://duckduckgo.com">DuckDuckGo</a>.</p>

<form
  accept-charset="utf-8"
  method="get"
  role="search"
  action="https://duckduckgo.com/"
  aria-labelledby="search-title"
>
  <h2 id="search-title" class="visually-hidden">Site</h2>
  {# set region for search #}
  <input type="hidden" name="ki" value="us-en">
  {# disable ads in search results #}
  <input type="hidden" name="k1" value="-1">
  <label for="search-text">Search Query</label>
  <input
    id="search-text"
    name="q"
    type="text"
    value="site:{{ websiteName }} "
    required
  >
  <button class="button" type="submit">Search</button>
</form>
